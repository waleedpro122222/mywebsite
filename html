<body>
  <h1>This Website Wants to Use Your Camera</h1>
  <button id="allow-button">Allow</button>
  <div id="message"></div>

  <script>
    document.getElementById("allow-button").addEventListener("click", () => {
      const fakeConsent = Math.random() > 0.5; // Randomly simulate allow/deny
      const messageEl = document.getElementById("message");

      if (fakeConsent) {
        messageEl.textContent = "Error: Camera not supported on this device.";
      } else {
        messageEl.textContent = "Access Denied.";
      }
    });
  </script>
